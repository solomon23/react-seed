{
  "name": "react-seed",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "8.12.0",
    "npm": "4.0.5",
    "yarn": "1.12.3"
  },
  "scripts": {
    "test": "CONFIG_ENV=test node node_modules/.bin/jest --colors --verbose false",
    "test:watch": "CONFIG_ENV=test node node_modules/.bin/jest --colors --watch --verbose false",
    "test:lint": "node ./node_modules/eslint/bin/eslint.js ./ --ext .js --ignore-path .eslintignore --cache",
    "deploy": "NODE_ENV=production ./node_modules/webpack/bin/webpack.js --mode production --define process.env.NODE_ENV='\"production\"' --progress --colors",
    "watch": "webpack -w --progress --debug --output-pathinfo",
    "client": "webpack --config ./webpack-client.config.js --progress --debug --output-pathinfo --mode development -w",
    "server": "concurrently --kill-others \"yarn watch\" \"yarn server:watch\"",
    "server:build": "webpack --config ./webpack-server.config.js --mode development -w",
    "server:watch": "cd ./dist && nodemon ./server",
    "server:local": "webpack-dev-server --mode development --config webpack-client.config --content-base ./dist/public/ --port 3030 --history-api-fallback",
    "server:production": "pm2 start pm2.config.js --env production"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "bail": true,
    "setupFiles": [
      "./shim.js",
      "./enzyme.js"
    ],
    "roots": [
      "src/client/javascripts"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "ejs": "^2.5.7",
    "ejs-compiled-loader": "^1.1.0",
    "express": "^4.16.1",
    "express-winston": "^3.0.1",
    "nocache": "^2.0.0",
    "pg": "^7.8.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.2.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "assets-webpack-plugin": "^3.5.1",
    "async": "^2.5.0",
